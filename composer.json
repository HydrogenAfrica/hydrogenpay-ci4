
{
    "name": "hydrogenafrica/hydrogenpay-ci4",
    "description": "Hydrogenpay SDK integration for CodeIgniter 4 applications",
    "type": "library",
    "license": "MIT",
    "homepage": "https://hydrogenpay.com",
    "keywords": [
        "codeigniter4",
        "hydrogenpay",
        "payments",
        "sdk",
        "php"
    ],
    "authors": [
        {
            "name": "HydrogenAfrica",
            "email": "support@hydrogenpay.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "ext-json": "*",
        "codeigniter4/settings": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "codeigniter4/devkit": "^0.1",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "HydrogenAfrica\\HydrogenpayCi4\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "support": {
        "email": "support@hydrogenpay.com",
        "issues": "https://github.com/hydrogenafrica/hydrogenpay-ci4/issues"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff",
        "test": "phpunit"
    }
}